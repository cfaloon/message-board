.row
  %h2
    %strong #{@post.title}
.row
  .author-block
    Posted by
    .author-email #{@post.user.email}
    %br
    on #{@post.created_at}
.row
  .post-content
    #{simple_format @post.content}
.row
  %h2 Replies
  - if @post.replies.any?
    - @post.replies.each do |reply|
      .row
        .post-reply
          #{simple_format reply.content}
          .post-reply-author - #{reply.user.email} on #{reply.created_at}
  - else
    %h3 There are no replies.
.row
  - if user_signed_in?
    = render 'replies/new'
  - else
    You must be signed in to reply.
    = link_to "Sign Up", new_user_registration_path
    or
    = link_to "Sign In", new_user_session_path
